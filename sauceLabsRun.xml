<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite thread-count="2" name="suite.SauceLabs" parallel="tests" verbose="2">

    <listeners>
        <listener class-name="com.coherent.training.selenium.stanila.tests.utils.AllureListener"/>
    </listeners>

    <test name="onliner.by Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="108"/>
        <parameter name="platform" value="Windows 10"/>
        <parameter name="hubGridURL" value="http://192.168.0.11:4444/wd/hub"/>

        <classes>
            <class name="com.coherent.training.selenium.stanila.tests.PriceTest"/>
        </classes>
    </test>

    <test name="onliner.by Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="version" value="107"/>
        <parameter name="platform" value="Windows 10"/>
        <parameter name="hubGridURL" value="http://192.168.0.11:4444/wd/hub"/>

        <classes>
            <class name="com.coherent.training.selenium.stanila.tests.PriceTest"/>
        </classes>
    </test>

</suite>